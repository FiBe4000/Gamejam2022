void fragment(){
  // Check whether we are inside a circle, remap UV coordinates to -1.0 to 1.0
  vec2 pos = UV*2.0 - vec2(1.0);
  vec2 sq = pos*pos;
  if(sq.x + sq.y <= 1.0)
  {
    COLOR = texture(TEXTURE, UV);
    COLOR += vec4(vec3(0.0, 0.3, 0.0), 0.0);
  }
  else
    COLOR = vec4(0.0, 0.0, 0.0, 0.0);
}"

